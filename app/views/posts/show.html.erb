
<h3><%=@post.title%></h3>

<p><%=@post.content%></p>

<h4>Categories</h4>
<ul>
    <%@post.categories.each do |category|%>
        <li><%=category.name%></li>
    <% end %>   
</ul>

<h4>Comments</h4>
<ul>
    <% @post.comments.each do |comment|%>
        <li><%=comment.content%> </li>
    <% end %>
</ul>

<h4>Users Who Have Commented</h4>
<ul>
    <% @post.comments.each do |comment|%>
        <% comment.user %>
    <% end %>
</ul>